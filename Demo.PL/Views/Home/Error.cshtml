
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="d-flex flex-column align-items-center justify-content-center text-center vh-100">
    <div class="card shadow-lg p-4 border-0" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="display-4 text-danger">Oops!</h1>
            <h4 class="text-muted">Something went wrong...</h4>
            <p class="text-secondary">We encountered an unexpected error. Please try again later or contact support if the issue persists.</p>

            <img src="/images/error.svg" alt="Error Illustration" class="img-fluid my-3" style="max-width: 250px;" />

            <a href="/" class="btn btn-primary mt-2">Go Back Home</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
</style>
