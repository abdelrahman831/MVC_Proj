@model EmployeeViewModel
@inject IDepartmentService departmentService

@{
    var departments = departmentService.GetAllDepartments()
        .Select(d => new SelectListItem { Value = d.Id.ToString(), Text = d.Name })
        .ToList();

    ViewBag.Departments = new SelectList(departments, "Value", "Text", Model?.DepartmentId);
}

<form asp-controller="Employee" asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data" class="mb-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <!-- Name -->
        <div class="form-group col-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group col-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Department -->
        <div class="form-group col-6">
            <label asp-for="DepartmentId" class="form-label">Department</label>
            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                <option value="">Select Department</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <!-- Image Upload -->
        <div class="form-group col-6">
            <label class="form-label">Image</label>
            @if (!string.IsNullOrEmpty(Model?.ImagePath))
            {
                <div>
                    <img src="@Url.Content($"~/Files/Images/{Model.ImagePath}")" alt="Employee Image" class="img-thumbnail" style="max-width: 150px;">

                </div>
            }

            <input asp-for="Image" type="file" class="form-control" accept=".jpg,.jpeg,.png">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-center gap-3 mt-3">
            <button type="submit" class="btn btn-primary px-4">
                @(ViewBag.Action == "Create" ? "Create" : "Save")
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                @(ViewBag.Action == "Create" ? "Cancel" : "Back to List")
            </a>
        </div>
    </div>
</form>

