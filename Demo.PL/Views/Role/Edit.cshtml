@model RoleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<form asp-controller="Role" asp-action="Edit" method="post" asp-route-id="@Model.Id" enctype="multipart/form-data" class="mb-5 pb-5">
    <div asp-validation-summary="ModelOnly">  </div>


        <!-- Name Field -->
        <div class="form-group col-6">
            <label asp-for="Name" class="form-label">Role Name</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>



        <h3>Assign Users To Role</h3>
        <div class="form-group">
        @for (int i = 0; i < Model.users.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model.users[i].UserId" />
                <input type="hidden" asp-for="@Model.users[i].UserName" />

                <input asp-for="@Model.users[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.users[i].IsSelected">@Model.users[i].UserName</label>
                
            </div>

        }   
        </div>



            <div class="d-flex justify-content-center gap-3 mt-3">
                <button type="submit" class="btn btn-success px-4" style="background-color: #6a0dad; border-color: #6a0dad;">
                    Save
                </button>

                <a asp-controller="Role" asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
            </div>
        

</form>