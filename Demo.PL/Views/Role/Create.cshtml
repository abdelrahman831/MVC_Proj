@model RoleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<form asp-controller="Role" asp-action="Create" method="post" enctype="multipart/form-data" class="mb-5 pb-5">
    <div asp-validation-summary="ModelOnly">  </div>


    <div class="row">
        <!-- Name Field -->
        <div class="form-group col-6">
            <label asp-for="Name" class="form-label">Role Name</label>
            <input asp-for="Name" type="text" class="form-control" id="Name" name="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>



        <div class="d-flex justify-content-center gap-3 mt-3">
            <button type="submit" class="btn btn-primary px-4" style="background-color: #6a0dad; border-color: #6a0dad;">
                Create
            </button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
        </div>

</form>