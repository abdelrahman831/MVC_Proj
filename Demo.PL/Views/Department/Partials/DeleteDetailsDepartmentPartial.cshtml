@model DepartmentDetailsToReturnDto

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" style="color: black;">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" style="color: black;">Administration</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <!-- General Tab -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="form-label" asp-for="Code"></label>
                <input asp-for="Code" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Description"></label>
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="CreationDate"></label>
                <input asp-for="CreationDate" class="form-control" readonly />
            </div>
        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="row">
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>

@if (ViewData["Title"] as string == "Delete")
{
    <div class="mt-4">
        <form method="post" asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Inbox" class="btn btn-outline-dark">Back</a>

        </form>

    </div>
}
else
{
    <div class="d-flex justify-content-center gap-3 mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success" style="background-color: #6a0dad; border-color: #6a0dad;">Edit</a>

        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
    </div>

}