@model DepartmentViewModel

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form asp-controller="Department" asp-action="@ViewBag.Action" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group mb-3">
        <label for="Name" class="form-label" asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name">
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group mb-3">
        <label for="Description" class="form-label" asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" id="Description" name="Description" rows="3"></textarea>
    </div>

    <div class="form-group  mb-3">
        <label for="Code" class="form-label" asp-for="Code">Code</label>
        <input type="text" asp-for="Code" class="form-control" id="Code" name="Code">
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="CreationDate" class="form-label" asp-for="CreationDate">Creation Date</label>
        <input type="date" class="form-control" asp-for="CreationDate" id="CreationDate" name="CreationDate">
        <span asp-validation-for="CreationDate" class="text-danger"></span>

    </div>
    @if (ViewBag.Action == "Create")
    {
        <div class="d-flex justify-content-center gap-3 mt-3">
            <button type="submit" class="btn btn-primary px-4" style="background-color: #6a0dad; border-color: #6a0dad;">
                Create
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center gap-3 mt-3">
            <button type="submit" class="btn btn-success px-4" style="background-color: #6a0dad; border-color: #6a0dad;">
                Save
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
        </div>
    }


</form>