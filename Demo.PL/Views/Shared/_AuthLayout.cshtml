<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC Project</title>

    <!-- Bootstrap & Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Demo.PL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            line-height: 1.6;
            flex: 1;
        }

        .navbar {
            background: linear-gradient(to right, #5c6bc0, #283593);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            padding: 0.4rem 0;
            position: relative;
            transition: background-color 0.3s ease;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 600;
            color: #fff;
            display: flex;
            align-items: center;
            text-decoration: none;
        }

            .navbar-brand:hover {
                color: #ffc107;
            }

        .navbar-toggler {
            border: none;
            color: #fff;
        }

        .navbar-nav .nav-link {
            color: #fff;
            padding: 0.75rem 1rem;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107;
            }

        .footer {
            background-color: #495057;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

            .footer a {
                color: #ffc107;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #fff;
                    text-decoration: underline;
                }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            gap: 3rem;
            padding: 2rem;
            background: #f0f2f5;
        }

        /* Split Layout Form */
        .split-form {
            display: flex;
            background: white;
            border-radius: 20px;
            overflow: hidden;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

            .split-form .image-side {
                flex: 1;
                background: linear-gradient(45deg, #FF6B6B, #FFE66D);
                padding: 2rem;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                color: white;
                text-align: center;
            }

            .split-form .form-side {
                flex: 1;
                padding: 3rem;
            }

            .split-form input {
                width: 100%;
                padding: 1rem;
                margin: 0.5rem 0;
                border: none;
                border-bottom: 2px solid #eee;
                outline: none;
                transition: border-color 0.3s;
            }

                .split-form input:focus {
                    border-bottom-color: #FF6B6B;
                }

            .split-form button {
                width: 100%;
                padding: 1rem;
                margin-top: 1.5rem;
                background: #FF6B6B;
                color: white;
                border: none;
                border-radius: 25px;
                cursor: pointer;
                font-weight: bold;
                transition: transform 0.3s;
            }

                .split-form button:hover {
                    transform: translateY(-2px);
                }

    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-laptop-code"></i> MVC Project
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - MVC Project. <a href="#">Privacy Policy</a></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("ValidationScripts", required: false)
    <script>
        $(document).ready(function () {
            $('form input, form select, form textarea').on('blur', function () {
                $(this).valid();
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            var toastEl = document.querySelector(".toast");
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 5000 });
                toast.show();
            }
        });
    </script>

</body>
</html>
