
@model LoginViewModel
@{
    Layout = "_AuthLayout";
    
}



<body>
    <!-- Split Layout Form -->
    <div class="split-form">
        <div class="image-side">
            <h2>Welcome Back!</h2>
            <p>Enter your details to access your account</p>
        </div>
        <div class="form-side">
            <h2>Login</h2>
            <form asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="text" asp-for="UserName" placeholder="Enter Yuor First Name" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input type="password" asp-for="Password" placeholder="Enter Yuor Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="checkbox" asp-for="RememberMe" />
                <button type="submit">regiter</button>


            </form>
        </div>
    </div>


</body>



@section ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
}